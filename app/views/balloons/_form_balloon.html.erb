<%= simple_form_for [@edition, @post, @balloon], remote: true, method: :post do |f| %>
  <div class="btn-group radio-options" data-toggle="buttons">
    <label class="btn btn-default active text">
      <%= f.radio_button("type", "Texto", checked: "checked") %> Texto
    </label>
    <label class="btn btn-default img">
      <%= f.radio_button("type", "Imagem/GIF") %> Imagem/GIF
    </label>
  </div>
  <%= f.input :content, label: false, placeholder: "Texto" %>
  <%= f.input :balloon_img, label: false %>
  <%= f.input :balloon_img_cache, as: :hidden %>
  <%= f.input :link, label: false, placeholder: "URL para texto ou imagem" %>
  <%= f.submit 'Criar um balÃ£o', class: "btn btn-default btn-block" %>
<% end %>

<% content_for(:js) do %>

  <script>

    $("#balloon_balloon_img").hide();

    $('.text').on("click", function(){
      $("#balloon_content").show();
      $("#balloon_balloon_img").hide();
    });

    $('.img').on("click", function(){
      $("#balloon_balloon_img").show();
      $("#balloon_content").hide();
    });

  </script>

<% end %>

