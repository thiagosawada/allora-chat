
<div class="navbar-wagon navbar-top">



    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dpg1ipkol/image/upload/v1503063513/Slide1_g07foi.png" %>
    <% end %>

      <% if current_page?(root_path) %>
        <% unless user_signed_in?  %>
          <div class="btn-position">
            <%= link_to "Conheça o nosso chat", '#one', class: "navbar-wagon-item  navbar-wagon-link" %>
            <%= link_to "Como funciona", '#two', class: "navbar-wagon-item  navbar-wagon-link" %>
            <%= link_to "Quem usa", '#three', class: "navbar-wagon-item  navbar-wagon-link" %>
          </div>
        <% end %>
      <% end %>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">

        <% if user_signed_in? %>

          <!-- Links when logged in -->
          <!-- <%= link_to "Host", "#", class: "navbar-wagon-item navbar-wagon-link" %> -->

          <!-- Avatar with dropdown menu -->
          <div class="navbar-wagon-item">
            <div class="dropdown">

              <% if current_user.user_photo.blank? %>
                <%= image_tag "http://res.cloudinary.com/dpg1ipkol/image/upload/c_scale,h_123/v1503537058/puyuqdcf01bvb65ob5su.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <% else %>
                <%= image_tag current_user.user_photo_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <% end %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                  <%= link_to new_edition_path do %>
                    <i class="fa fa-plus" aria-hidden="true"></i> <%= t(".edition", default: "Criar edição") %>
                  <% end %>
                </li>
                <% if current_user.editions.present? %>
                  <li>
                    <%= link_to edition_path(current_user.editions.last.id) do %>
                      <i class="fa fa-pencil" aria-hidden="true"></i>  <%= t(".index", default: "Editar última edition") %>
                    <% end %>
                  </li>
                <% end %>
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path do %>
                    <i class="fa fa-users" aria-hidden="true"></i>  <%= t(".index", default: "Influenciadores") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to root_path do %>
                    <i class="fa fa-home"></i>  <%= t(".profile", default: "Página inicial") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

          <%= link_to t(".sign_up", default: "Cadastre-se"), new_user_registration_path,
          class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <% if user_signed_in? %>
            <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to new_edition_path do %>
                  <i class="fa fa-plus" aria-hidden="true"></i> <%= t(".edition", default: "Criar edição") %>
                <% end %>
              </li>
              <% if current_user.editions.present? %>
                <li>
                  <%= link_to edition_path(current_user.editions.last.id) do %>
                    <i class="fa fa-pencil" aria-hidden="true"></i>  <%= t(".index", default: "Editar última edition") %>
                  <% end %>
                </li>
              <% end %>
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <i class="fa fa-users" aria-hidden="true"></i>  <%= t(".index", default: "Influenciadores") %>
                <% end %>
              </li>
              <li>
                <%= link_to root_path do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "Página inicial") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
                <% end %>
              </li>
            </ul>
          <% else %>
            <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
              </li>
              <li>
                <%= link_to t(".sign_up", default: "Cadastre-se"), new_user_registration_path,
                class: "navbar-wagon-item navbar-wagon-link" %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>

    </div>
