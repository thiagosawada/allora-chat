<div id="app">
<div id="modal-iframe" class="hidden"><iframe src="https://es.wikipedia.org/wiki/Iframe"></iframe></div>
  <div id="chat">

    <div class="post">
      <div class="screen1 screen">
        <div>
          <div class="balloon">
            <p><%= content_with_emoji(@edition.greeting) %></p>
          </div>
        </div>
        <% if @edition.greeting_img.present? %>
          <div>
            <div class="balloon">
              <%= cl_image_tag @edition.greeting_img, height: 150 %>
            </div>
          </div>
        <% end %>
        <% if @edition.greeting_gif.present? %>
          <div>
            <div class="balloon">
              <%= image_tag @edition.greeting_gif, height: 150 %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% @edition.posts.each do |post| %>

      <div class="post">

        <!-- SCREEN 1 -->
        <% if @edition.posts.first == post %>
          <div class="screen1 screen">
            <div>
              <div class="balloon">
                <p><%= content_with_emoji(post.headline) %></p>
              </div>
            </div>
            <div>
              <div class="balloon">
                <%= cl_image_tag post.post_img, height: 150 %>
              </div>
            </div>

            <div class="text-center btn-margin">
              <a class="btn btn-xs new-click-more"><%= content_with_emoji(post.option_more) %></a>
              <a class="btn btn-xs new-click-next"><%= content_with_emoji(post.option_next) %></a>
            </div>
          </div>

        <% else %>
          <div class="screen1 screen">
            <div>
              <div class="balloon hidden left">
                <p><%= content_with_emoji(post.headline) %></p>
              </div>
            </div>
            <div>
              <div class="balloon hidden left">
                <%= cl_image_tag post.post_img, height: 150 %>
              </div>
            </div>
            <div>
              <div class="text-center btn-margin hidden">
                <a class="btn btn-xs new-click-more"><%= content_with_emoji(post.option_more) %></a>
                <a class="btn btn-xs new-click-next"><%= content_with_emoji(post.option_next) %></a>
              </div>
            </div>

          </div>
        <% end %>
      <!-- SCREEN 2 -->

        <% post.balloons.order(:created_at).each_slice(2) do |balloon| %>

          <div class="screen2 screen">
            <div>
              <% if balloon[0].content.present? %>
                <% if balloon[0].link.present? %>
                  <div class="balloon hidden left" style="cursor:pointer" onclick="location.href='<%= balloon[0].link %>'">
                    <p><%= content_with_emoji(balloon[0].content) %></p>
                    <br>
                    <%= link_to "#{balloon[0].short_link}", balloon[0].link %>
                  </div>
                <% else %>
                  <div class="balloon hidden left">
                    <p><%= content_with_emoji(balloon[0].content) %></p>
                  </div>
                <% end %>
              <% else %>
                <div class="balloon hidden left">
                  <%= cl_image_tag balloon[0].balloon_img, height: 150 %>
                </div>
              <% end %>
            </div>
            <div>
              <% if balloon[1].present? %>
                <% if balloon[1].content.present? %>
                  <% if balloon[1].link.present? %>
                    <div class="balloon hidden left" style="cursor:pointer" onclick="location.href='<%= balloon[1].link %>'">
                      <p><%= content_with_emoji(balloon[1].content) %></p>
                      <br>
                      <%= link_to "#{balloon[1].short_link}", balloon[1].link %>
                    </div>
                  <% else %>
                    <div class="balloon hidden left">
                      <p><%= content_with_emoji(balloon[1].content) %></p>
                    </div>
                  <% end %>
                <% else %>
                  <div class="balloon hidden left">
                    <%= cl_image_tag balloon[1].balloon_img, height: 150 %>
                  </div>
                <% end %>

              <% end %>
            </div>
            <div>
              <div class="text-center btn-margin hidden">
                <% unless balloon[1] == post.balloons.last || balloon[0] == post.balloons.last %>
                  <a class="btn btn-xs new-click-more"><%= content_with_emoji(post.option_more) %></a>
                <% end %>
                <% unless post.id == @edition.posts.last.id %>
                  <a class="btn btn-xs new-click-next"><%= content_with_emoji(post.option_next) %></a>
                <% end %>
                <% if balloon[1] == post.balloons.last || balloon[0] == post.balloons.last %>
                  <div>
                    <div class="balloon hidden left">
                      <p><%= content_with_emoji(@edition.farewell) %></p>
                    </div>
                  </div>
                  <% if @edition.farewell_img.present? %>
                    <div>
                      <div class="balloon hidden left">
                        <%= cl_image_tag @edition.farewell_img, height: 150 %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
