

<div class="row">


  <div class="row no-gutter" id="homebanner" >
    <div class="hidden-sm hidden-xs">

      <div class="col-xs-12 col-sm-6 l-side" style="background-image: linear-gradient(-225deg, rgba(255,128,8,0.6) 0%, rgba(255,200,55,0.6) 50%), url(<%= check_user_photo %>);">

        <div class="container" id="blog-card">
        <div class="tittle-user">
          <h1><%= @user.first_name.capitalize + " " + @user.last_name.capitalize %></h1>
        </div>
          <div class="card-info title-content">

           <h4><%= @user.description %></h4>

         </div>

        </div>

      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <%= render partial: "shared/app" %>
      <div class="mobile-influencer hidden-md hidden-lg">

        <% if @user.user_photo.blank? %>
          <%= image_tag "http://res.cloudinary.com/dpg1ipkol/image/upload/v1503534898/user-placeholder_zskuvv.png", class: "avatar-influencer" %>
        <% else %>
          <%= image_tag @user.user_photo_url, class: "avatar-influencer" %>
        <% end %>
        <div class="name-influencer">
        <p><strong><i>@<%= @user.first_name.capitalize + " " + @user.last_name.capitalize %></i></strong></p>
        </div>
      </div>
    </div>

  </div>
</div>







