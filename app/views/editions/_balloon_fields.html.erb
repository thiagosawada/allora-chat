<div class="balloons-fields">
  <p class="text-right section-partial">Balão</p>
  <%= link_to_remove_association "<i class='fa fa-times-circle times-color' aria-hidden='true'></i><span class='plus-name'>Remover</span>".html_safe, f, data: { confirm: 'Tem certeza que deseja apagar este balão?'}, wrapper_class: "balloons-fields" %>
  <br>

  <div class="btn-group radio-options" data-toggle="buttons">
    <label class="btn btn-default btn-xs active text-option">
      <%= f.radio_button("type", "Texto", checked: "checked") %> Texto
    </label>
    <label class="btn btn-default btn-xs img-option">
      <%= f.radio_button("type", "Imagem") %> Imagem
    </label>
    <label class="btn btn-default btn-xs gif-option">
      <%= f.radio_button("type", "GIF") %> GIF
    </label>
    <label class="btn btn-default btn-xs youtube-option">
      <%= f.radio_button("type", "YouTube") %> YouTube
    </label>
    <label class="btn btn-default btn-xs map-option">
      <%= f.radio_button("type", "Localização") %> Localização
    </label>
    <label class="btn btn-default btn-xs meteo-option">
      <%= f.radio_button("type", "Meteorologia") %> Meteorologia
    </label>
  </div>

  <br>
  <div class="balloon-form hide-field" id="input-text-balloon">
    <%= f.input :content, label: false, placeholder: "Texto", input_html: { data: { emojiable: true }, class: "emoji-picker-container balloon-form-input-text" } %>
    <%= f.input :link, label: false, placeholder: "Link para texto", input_html: { class: "balloon-form-input balloon-form-link" } %>
  </div>

  <div class="balloon-form hide-field hidden" id="input-img-balloon">
    <%= f.input :balloon_img, label: false %>
    <%= f.input :balloon_img_cache, as: :hidden %>
  </div>

  <div class="balloon-form hide-field hidden" id="input-gif-balloon">
    <%= f.input :balloon_gif, label: false, placeholder: "Buscar um GIF", input_html: { class: "balloon-form-input margin-negative gif-library" } %>
  </div>

  <div class="balloon-form hide-field hidden" id="input-youtube-balloon">
    <%= f.input :youtube, label: false, placeholder: "Link do YouTube", input_html: { class: "balloon-form-input margin-negative" } %>
  </div>

  <div class="balloon-form hide-field hidden" id="input-map-balloon">
    <%= f.input :address, label: false, placeholder: "Endereço", input_html: { class: "balloon-form-input margin-negative" } %>
  </div>

  <div class="balloon-form hide-field hidden weather" id="input-meteo-balloon">
    <%= f.input :weather, label: false, placeholder: "Buscar por cidade para obter previsão de tempo", input_html: { class: "balloon-form-input-text" } %>
    <div class="text-center">
      <%= link_to "Inserir previsão", "#", id: "weather", class: "btn btn-xs btn-default btn-block btn-search-weather" %>
    </div>
  </div>
    <!-- <p>Vai exibir temperatura máxima e mínima, velocidade do vento e umidade do ar</p> -->

</div>



