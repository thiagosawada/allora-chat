<div class="row no-gutter user-page" >

    <div class="col-xs-12 col-sm-6 l-side user-content">
        <h1>@<%= @user. username %></h1>
         <div class="user img-circle" >
            <% if @user.user_photo.present? %>
              <%= image_tag @user.user_photo, class: 'card-user' %>
            <% else %>
              <%= image_tag 'http://res.cloudinary.com/dpg1ipkol/image/upload/v1502308490/empresario_318-72886_gbwwol.png', class: 'card-user' %>
            <% end %>
          </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6 l-side">
          <br>
            <h4>
              <%= @user.first_name.capitalize + " " + @user.last_name.capitalize %>
            </h4>
            <p>
              <%= @user.category %>
            </p>
            <p>
              <%= @user.position %>

            </p>
            <h4>
              Descripção:
            </h4>
            <p>
              <%= @user.description %>
            </p>
          </div>
          <div class="col-xs-12 col-sm-6 r-side">


          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-12 col-sm-6 r-side">
          <ul>
            <i class="fa fa-facebook" aria-hidden="true"></i>
            <i class="fa fa-instagram" aria-hidden="true"></i>
            <i class="fa fa-twitter" aria-hidden="true"></i>
          </ul>
          </div>
          <div class="col-xs-12 col-sm-6 r-side">
            <p>
              Membro desde:
            </p>
            <p>
              Editions criadas:
            </p>
          </div>
        </div>
    </div>

  <div class="col-xs-12 col-sm-6 r-side">
    <%= render partial: "shared/preview" %>
  </div>

</div>

