<%= simple_form_for [@edition, @post] do |f| %>
  <div class="titulo">
    <h4 class="text-center">Título</h4>
    <%= f.input :headline, label: false, placeholder: "Texto" %>
    <%= f.input :post_img, label: "Imagem ou GIF" %>
    <%= f.input :post_img_cache, as: :hidden %>
    <%#= f.input :remote_post_img_url, label: false, placeholder: "URL da imagem" %>
  </div>

  <div class="respostas">
    <h4 class="text-center">Customizar respostas</h4>
    <%= f.input :option_more, label: false, placeholder: "Mais informações" %>
    <%= f.input :option_next, label: false, placeholder: "Próximo post" %>
  </div>

  <%= f.submit 'Criar um balão', class: "btn btn-primary" %>
<% end %>

