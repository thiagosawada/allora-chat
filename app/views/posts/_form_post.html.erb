<%= simple_form_for [@edition, @post] do |f| %>
  <%= f.input :headline, label: "Título" %>
  <%= f.input :post_img, label: "Imagem ou GIF" %>
  <%= f.input :post_img_cache, as: :hidden %>
  <%= f.input :remote_post_img_url %>
  <%= f.input :option_more, label: "Opção para mais informações" %>
  <%= f.input :option_next, label: "Opção para o próximo assunto" %>
  <%= f.submit 'Criar um balão', class: "btn btn-primary" %>
<% end %>
